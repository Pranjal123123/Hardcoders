<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Discussion Forum</title>
    <!-- <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous"> -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta2/css/all.min.css" integrity="sha512-YWzhKL2whUzgiheMoBFwW8CKV4qpHQAEuvilg9FAn5VJUDwKZZxkJNuGM4XkWuk94WCrrwslk8yWNGmY1EduTA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="/css/forumStyle.css">
    <link rel="stylesheet" href="/css/nav_style.css">
    <script src="https://kit.fontawesome.com/23068c81bc.js" crossorigin="anonymous"></script> 
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@100;200;300;500;600;700;900&display=swap" rel="stylesheet">
    <script src="script.js"></script> 
</head>
</head>
<body>

    <!--Navbar code copy paste-->
    <div class="pos" style="z-index: 4;">
        <%- include('partials/header') %>
    </div>

    <div class="abc_new1" style="
    margin-top: 150px;
">
            <!--List container-->
    <div class="query-list">

        <!--Button-->
        <div class="s_btn" style="
        margin: 30px 0px;
        margin-left: -25px;
    ">
            <a id="ask-btn" href="/forum/create">ASK YOUR QUESTION</a>
        </div>
        
        <!--Forum List-->
        <ul>
            <% questions.forEach(function(question){%>
                <!-- Query List Item -->

            <li class="query"> 
                
                <!-- Query top -->
                <div class="query-top">
                    <span class="query-name"><%=question.title%></span>
                    <span class="query-time">Posted on : <%=question.queryTime%></span>     
                    <span class="query-votes"> <button><i class="fas fa-sort-up"></i></button> <%=question.likes%> Votes <button><i class="fas fa-sort-down"></i></button></span>
                </div>
                
                <!-- Query Description -->
                <div class="query-desc">
                    <%=question.body%>
                </div>
                
                <!-- Query Tags -->
                <div class="query-tags">
                    <%=question.tags%>
                </div>
                <div>
                    <a href="/forum/view/<%=question._id%>" >View</a>
                </div>
                <div>
                    <a href="/forum/view/<%=question._id%>" >Answer</a>
                </div>
                
            </li>
       
            <%})%>
            

            <!-- Query List Item -->
           
            
        </ul>
        
    </div>

    <!--Search and Icon container-->
    <form class="forum-search" style="width: 400px;" action="/forum" method="GET">

        <div class="search-div" >
            <input type="text" name="search" id="search-query" placeholder="Search by query-tags">
            <i class="fas fa-search" id="search-icon"></i>
        </div>

    </form>
    </div>
    
    <%- include('partials/footer') %>
   
</body>
</html>